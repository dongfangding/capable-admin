<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddf.boot.capableadmin.infra.mapper.SysUserJobMapper">
    <select id="batchInsertUserJob" resultType="int">
        INSERT INTO sys_user_job (user_id, job_id)
        VALUES
        <foreach collection="jobIds" item="jobId" index="index" separator=",">
            (#{userId}, #{jobId})
        </foreach>
    </select>

    <delete id="deleteByUserId">
        delete
        from sys_user_job
        where user_id = #{userId}
    </delete>
</mapper>
